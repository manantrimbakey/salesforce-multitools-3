{
  "name": "salesforce-multitools-3",
  "displayName": "Salesforce Multitools",
  "description": "A set of tools for Salesforce development in VS Code",
  "version": "0.0.1",
  "publisher": "salesforce-multitools",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/salesforce-multitools-3"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "salesforce",
    "sfdc",
    "salesforce development",
    "sfdx"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/.sfdx/sfdx-config.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "salesforce-multitools-3.helloWorld",
        "title": "Hello World",
        "category": "Salesforce Multitool"
      },
      {
        "command": "salesforce-multitools-3.refreshConnection",
        "title": "Refresh Salesforce Connection",
        "category": "Salesforce Multitool"
      },
      {
        "command": "salesforce-multitools-3.getLastModifiedInfo",
        "title": "Get Last Modified Info",
        "category": "Salesforce Multitool"
      }
    ],
    "configuration": {
      "title": "Salesforce Multitool",
      "properties": {
        "salesforceMultitools.logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error",
            "none"
          ],
          "default": "info",
          "description": "Log level for the extension. Debug shows the most information, none disables logging."
        },
        "salesforceMultitool.lastModifiedAutoRefreshInterval": {
          "type": "number",
          "default": 15,
          "minimum": 5,
          "description": "Interval in seconds for automatically refreshing last modified details from Salesforce. Set to 0 to disable auto-refresh."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@salesforce/core": "^8.10.3"
  }
}
